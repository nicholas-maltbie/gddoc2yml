{
    "build": {
      "dest": "_site",
      "template": [
        "default",
        "modern",
        "godot-template"
      ],
      "globalMetadata": {
        "_appTitle": "Godot Documentation",
        "_appFooter": "Godot Documentation",
        "_enableSearch": true
      },
      "content": [
        {
          "files": ["*.yml"],
          "src": "api",
          "dest": "api"
        },
        {
          "files": [
            "toc.yml",
            "index.md"
          ]
        }
      ],
      "resource": [
        "xrefmap/*.yml"
      ]
    }
  }